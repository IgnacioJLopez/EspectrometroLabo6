<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/CalibLongOnda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_longonda"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/CalibIntensidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="55dp"
        android:text="@string/btn_intensidad"
        app:layout_constraintBottom_toTopOf="@+id/CalibLongOnda"
        app:layout_constraintEnd_toEndOf="@+id/CalibLongOnda" />

    <Button
        android:id="@+id/Medicion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="57dp"
        android:layout_marginEnd="32dp"
        android:text="@string/btn_medicion"
        app:layout_constraintEnd_toEndOf="@+id/CalibLongOnda"
        app:layout_constraintTop_toBottomOf="@+id/CalibLongOnda" />

</androidx.constraintlayout.widget.ConstraintLayout>